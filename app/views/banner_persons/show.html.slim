.center(style="text-align: center;")
  h1 #{@banner_person.first_name} #{@banner_person.last_name}
  #chart-container(style="width:100%; height:400px;")
    javascript:
      for(var i = 0; i < gon.pts.length; i++) {
        let strs = gon.pts[i][0].split('-')
        gon.pts[i][0] = Date.UTC(parseInt(strs[0]), parseInt(strs[1]) -1, parseInt(strs[2]))
      }
      for(var i = 0; i < gon.handouts.length; i++) {
        let strs = gon.handouts[i][0].split('-')
        gon.handouts[i][0] = Date.UTC(parseInt(strs[0]), parseInt(strs[1]) -1, parseInt(strs[2]))
      }
      document.addEventListener('DOMContentLoaded', function () {
        var myChart = Highcharts.chart('chart-container', {
          chart: {
              zoomType: 'xy'
          },
          title: {
              text: 'Loyalty Points and Handouts for January 2019'
          },
          xAxis: [{
              type: 'datetime',
              crosshair: true
          }],
          yAxis: [{ // Primary yAxis
              labels: {
                  format: '{value}pts',
                  style: {
                      color: Highcharts.getOptions().colors[1]
                  }
              },
              title: {
                  text: 'Loyalty Points',
                  style: {
                      color: Highcharts.getOptions().colors[1]
                  }
              }
          }, { // Secondary yAxis
              title: {
                  text: 'Handouts',
                  style: {
                      color: Highcharts.getOptions().colors[0]
                  }
              },
              labels: {
                  format: '{value} units',
                  style: {
                      color: Highcharts.getOptions().colors[0]
                  }
              },
              opposite: true
          }],
          tooltip: {
              shared: true
          },
          legend: {
              layout: 'vertical',
              align: 'left',
              x: 120,
              verticalAlign: 'top',
              y: 100,
              floating: true,
              backgroundColor:
                  Highcharts.defaultOptions.legend.backgroundColor || // theme
                  'rgba(255,255,255,0.25)'
          },
          series: [{
              name: 'Handouts',
              type: 'column',
              yAxis: 1,
              data: gon.handouts,
              tooltip: {
                  valueSuffix: ' units'
              }

          }, {
              name: 'Loyalty Points',
              type: 'spline',
              data: gon.pts,
              tooltip: {
                  valueSuffix: 'pts'
              }
          }]
        })
      });

  ul.collapsible.popout#collapsed_links(data-collapsible="expandable")
    li.active
      .collapsible-header
        i.material-icons expand_more
        |  Regular View Mode
      .collapsible-body
        table.striped
          thead
            tr
              th Date
              th Loyalty Points
              th Handouts
              th Advisements
          tbody
            - @membership.table.each_with_index do |r, i|
              tr
                td.date = r["cdate"]
                td.lpts = r["lpts"]
                td.handouts = r["hunits"]
                -if r["aunits"] != nil
                  td.advisements
                    p #{r["aunits"]  }
                    a.btn-floating(href="/advisements/#{r["aid"]}/edit")
                      i.material-icons edit
                -else
                  td.advisements = ' '
    li
      .collapsible-header
        i.material-icons table_chart
        |  Enhanced View Mode
      .collapsible-body
        table.striped
          thead
            tr
              th ID
              th HSID
              th Date
              th Loyalty Points
              th Handouts
              th Advisements
              th Rate
          tbody
            - @membership.table.each_with_index do |r, i|
              tr
                td.id = @banner_person.id
                td.hsid = @membership.house_id
                td.date = r["cdate"]
                td.lpts = r["lpts"]
                td.handouts = r["hunits"]
                -if r["aunits"] != nil
                  td.advisements
                    p #{r["aunits"]  }
                    a.btn-floating(href="/advisements/#{r["aid"]}/edit")
                      i.material-icons edit
                -else
                  td.advisements = ' '
                td.acc = "#{@rates_col[i]} %"
